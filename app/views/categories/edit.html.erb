<% provide(:title ,"Edit a Category") %>
<div class="container">

  <div class="row">
    <h1 class="page-header">Edit Category</h1>
  </div>

  <div class="row">
    <%= form_for(@category) do |f| %>

      <%= f.label 'What is the name of the category?' %>
      <%= f.text_field :name, placeholder: 'For example: Eyelash Extensions', class: "span5" %>

      <%= f.label 'Provide a description for the category:' %>
      <%= f.text_field :description, placeholder: 'This is the marketing text for the service', class: "span5" %>

      <p><%= f.submit "Save Changes", class: "btn btn-large btn-primary" %></p>
    <% end %>
  </div>
  
</div>
